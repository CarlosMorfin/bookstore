<%= form_for([:admin, @store], html: { class: 'display-inline' }) do |f| %>
  <div class="form-group">
    <%= f.label(:codename) %>
    <%= f.text_field(:codename, class: 'form-control', autofocus: true) %>
  </div>
  <div class="form-group">
    <%= f.label(:phone) %>
    <%= f.text_field(:phone, class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label(:address) %>
    <%= f.text_field(:address, class: 'form-control') %>
  </div>

  <%= f.submit(class: 'btn btn-primary') %>
<% end %>
